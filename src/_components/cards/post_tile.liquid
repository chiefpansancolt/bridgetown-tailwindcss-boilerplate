---
name: Post Tile
description: A tile for cards of a blog post
variables:
    post:
        - data
        - details about a post
---

<div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
    <div class="flex-shrink-0">
        <img class="h-48 w-full object-cover" src="{{ post.tile_img_link }}" alt="{{ post.tile_img_alt }}">
    </div>
    <div class="flex-1 bg-white p-6 flex flex-col justify-between">
        <div class="flex-1">
            <p class="text-sm leading-5 font-medium text-indigo-600">
                {{ post.categories }}
            </p>
            <a href="{{ post.url }}" class="block">
                <h3 class="mt-2 text-xl leading-7 font-semibold text-gray-900">
                    {{ post.title }}
                </h3>
                <p class="mt-3 text-base leading-6 text-gray-500">
                    {{ post.summary }}
                </p>
            </a>
        </div>
        <div class="mt-6 flex items-center">
            <div class="flex-shrink-0">
                <a href="#">
                    <img class="h-10 w-10 rounded-full" src="{{ post.author_img }}" alt="{{ post.author }}">
                </a>
            </div>
            <div class="ml-3">
                <p class="text-sm leading-5 font-medium text-gray-900">
                    <a href="#" class="hover:underline">
                        {{ post.author }}
                    </a>
                </p>
                <div class="flex text-sm leading-5 text-gray-500">
                    <time datetime="{{ post.date }}">
                        {{ post.date | date: "%B %-d, %Y" }}
                    </time>
                    <span class="mx-1">
                        &middot;
                    </span>
                    <span>
                        {{ post.read_time }}
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>